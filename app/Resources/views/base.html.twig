<!DOCTYPE html>
<html>
    <head>
        <title>BDE</title>
        <link rel="shortcut icon" href="http://bde.exia-st.fr/wp-content/uploads/2016/01/logo-bde-st-vector-favicon.png">
        <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}">
        {% block header %}
        {% endblock %}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <script src="{{ asset('js/scroll.js') }}"></script>
        <meta charset="utf-8">
        {% if app.user %}
            <style type="text/css">
                .navbar-inverse .navbar-brand, .navbar-inverse .navbar-nav>li
                {                  
                  width: calc(100% / 5);                 
                }
            </style>
        {% else %}
            <style type="text/css">
                .navbar-inverse .navbar-brand, .navbar-inverse .navbar-nav>li
                {                  
                  width: calc(100% / 6);                 
                }
            </style>
        {% endif %}
    </head>

    <body>
    {% if app.request.uri == "http://localhost/projet%20web/bde/web/app_dev.php/users/login" %}
        <div class="container" id="container-login">
    {% else %}
        <div class="container">
    {% endif %}
            <div class="row">
                <div class="col-xs-2 col-lg-2">
                    <center><img src="{{ asset('img/logo.png') }}" ></center>
                </div>

                {% if app.user %}
                    <div class="col-xs-8 col-lg-8">
                        <header>                        
                            <nav class="navbar navbar-inverse">
                                <ul class="nav navbar-nav">
                                    <li><a href=""><span class="glyphicon glyphicon-home"></span>BDE</a></li>
                                    <li>
                                        <a class="dropdown-toggle" data-toggle="dropdown" href=""><span class="glyphicon glyphicon-knight"></span>Activités <span class="caret"></span></a>
                                        <ul class="dropdown-menu">
                                            <li><a href="">Toutes les activités</a></li>
                                            <li><a href="">Soumettre une activité</a></li>
                                            <li><a href="">Voter pour une activité</a></li>
                                        </ul>
                                    </li>
                                    <li><a href=""><span class="glyphicon glyphicon-shopping-cart"></span>Boutique</a></li>
                                    <li><a href=""><span class="glyphicon glyphicon-info-sign"></span>A propos</a></li>
                                    <li><a href="{{ path('fos_user_security_logout') }}"><span class="glyphicon glyphicon-log-out"></span>Déconnexion</a></li>
                                </ul>                           
                            </nav>
                        </header>
                    </div>

                    <div class="col-xs-1 col-lg-1">
                        <img src="{{ app.user.avatar }}" class="img-responsive" alt="Avatar">                        
                    </div>
                    <div class="col-xs-1 col-lg-1" style="height: 80px; line-height: 80px;">
                        {{ app.user.prenom }}         
                    </div>
                {% else %}
                    <div class="col-xs-8 col-lg-8">
                        <header>
                            <nav class="navbar navbar-inverse">
                                <ul class="nav navbar-nav">
                                    <li><a href=""><span class="glyphicon glyphicon-home"></span>BDE</a></li>
                                    <li><a href=""><span class="glyphicon glyphicon-knight"></span>Activités</a></li>
                                    <li><a href=""><span class="glyphicon glyphicon-shopping-cart"></span>Boutique</a></li>
                                    <li><a href=""><span class="glyphicon glyphicon-pencil"></span>Inscription</a></li>
                                    <li><a href=""><span class="glyphicon glyphicon-user"></span>Connexion</a></li>
                                    <li><a href=""><span class="glyphicon glyphicon-info-sign"></span>A propos</a></li>
                                </ul>                           
                            </nav>
                        </header>
                    </div>
                {% endif %}
            </div>

            {% block body %}
            {% endblock %}            

            <footer>
                <hr>
            </footer>

            {% block javascripts %}
            {% endblock %}
        </div>
    </body>
</html>
{%extends "::base.html.twig"%}

{% block header %}
	<link rel="stylesheet" type="text/css" href="{{ asset('css/styleShopAcceuil.css') }}">
{% endblock %}

{% block body %}
	
	<div class="row" id="boutique">
		<h1>Boutique</h1><br><br>
	</div>
			
	<!-- sous-menu -->
	<nav class="row">
        <div class="navbar navbar-inverse">
	        <div class="col-xs-2 hidden-lg">
				<a href="{{path('panierShow')}}"><span class="glyphicon glyphicon-shopping-cart caddie"></span></a>
			</div>
        	<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar2">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div class="collapse navbar-collapse" id="myNavbar2">
                <ul class="nav navbar-nav">
                {% for category in categories %}
                	<li><a class="liste" href="{{path('categorieShopShow', {'category_id':category.id} )}}">{{category.name}}</a></li>
                {% endfor %}
                </ul>
            </div>
        </div>
    </nav>
	
	<hr>


	<div class="row">
		<div class="col-lg-9">
			<!-- Articles populaires-->
			<div class="row">
				<div class="col-xs-12 col-md-8 col-lg-offset-1 noMargin">	
					<h2 class="title">Articles populaires :</h2>
				</div>
			</div>

			<div class="row"> 
				{%for product in bestOfProduct%} 
					<div class="col-xs-offset-1 col-xs-10 col-md-4 col-lg-4">
						<div class="thumbnail">
							<a class="noStyle" href="{{path('productShow', {'product_id':product.id} )}}"><h3 class="titleProduct"> {{product.name}} </h3></a>
							<center><img src="{{asset(product.image)}}" alt="Image du produit" class="imagesProduit"></center>
							<p>{{chaineDescription[product.id]}}...</p>
							<div class="addToBasket" id="{{ product.id }}">
								<button type="submit" class="btn btn-primary">Ajouter au panier</button>
							</div>
						</div>
					</div>
				{%endfor%}
			</div>

			<!-- Nouveautés-->
			<div class="row">
				<div class="col-xs-12 col-md-8 col-lg-offset-1 noMargin">	
					<h2 class="title">Nouveautés :</h2>
				</div>
			</div>
			<div class="row"> 
				{%for product in nouveaute%}
					<div class="col-xs-offset-1 col-xs-10 col-md-4 col-lg-4">
						<div class="thumbnail">
							<a class="noStyle" href="{{path('productShow', {'product_id':product.id} )}}"><h3 class="titleProduct"> {{product.name}} </h3></a>
							<center><img src="{{asset('img/'~product.image)}}" alt="Image" class="imagesProduit"></center>
							<p>{{chaineDescription[product.id]}}...</p>							
							<div class="addToBasket" id="{{ product.id }}">
								<button type="submit" class="btn btn-primary">Ajouter au panier</button>
							</div>
						</div>
					</div>
				{%endfor%}
			</div>
		</div>
		<div id="panier" class="col-lg-3 hidden-xs">
			<div class="row">
				<h4>Mon panier</h4>
				<div id="basket">
					<div class="col-lg-8 descriptionArticle">
						{%for product in productsInfo%}
							{{product.name}}<br>
						{%endfor%}
					</div>
					<div class="col-lg-4 prixArticle">
						{%for product in productsInfo%}
							{{product.price}}€<br>
						{%endfor%}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
<script src="{{ asset('js/stickyKit.js') }}" type="text/javascript"></script>
<script type="text/javascript">
	$("#panier").stick_in_parent();

	$(function()
	{
		$('.addToBasket').on('click', function()
		{
			var product_id = $(this).attr("id");

			$.ajax({
				type: "GET",
				url: "{{ path('addToBasket') }}",
				cache: false,
				data: {product_id: product_id},
			}).done(function(data)
			{
				if(data['erreur'] != "")
				{
					alert(data['erreur']);
				}

				else
				{
					$('#basket').append("<div class=\"col-lg-8 descriptionArticle\">"+data['name']+"</div><div class=\"col-lg-4 prixArticle\">"+data['price']+"€<br></div>");
				}
			});
		});
	});
</script>
{% endblock %}
{%extends "::base.html.twig"%}

{% block header %}
	<link rel="stylesheet" type="text/css" href="{{ asset('css/styleShopAcceuil.css') }}">
{% endblock %}

{% block body %}
	<aside>
	<div class="row">
		<h1 class="col-lg-offset-1-5" id="boutique">Boutique</h1><br><br>
	</div>
			
	<!-- sous-menu -->
	<nav class="row hey">
        <div class="col-lg-2 ctnListe">
            <a class="liste" href="{{path('categorieShopShow')}}">Matériel informatique</a> <!-- Lien vers la page de catégorie Matos -->
        </div>
        <div class="col-lg-2 ctnListe">
            <a class="liste" href="#">T-shirts</a>
    	</div>
        <div class="col-lg-2 ctnListe">
            <a class="liste" href="#">Mug</a>
        </div>
        <div class="col-lg-2 ctnListe">
            <a class="liste" href="#">Déguisements</a>
        </div>
        <div class="col-lg-2 ctnListe">
            <a class="liste" href="#">Poster</a>
        </div>
        <div class="col-lg-2 ctnListe">
            <a class="liste" href="#">Livres</a>
        </div>
    </nav>
	
	<hr>

	</aside>

	<div class="row">
		<div class="col-lg-9">
			<!-- Articles populaires-->
			<div class="row">
				<div class="col-lg-offset-1">	
					<h2>Articles populaires :</h2>
				</div>
			</div>

			<div class="row"> 
				{%for product in listArticle%}
				<article> 
					<div class="col-xs-12 col-md-4 col-lg-4">
						<div class="thumbnail">
							<div class="caption">
									<h3 class="titleArticle"> {{product.name}} </h3>   <!-- titre article -->
									<center><img src="image/T.jpg" alt="Bureautique" class="images"></center>
									<p>{{product.description}}</p>
									<form action="ProductController" method="post">
										<input type="hidden" name="product_id" value="{{product.id}}">
										<input type="submit" class="btn btn-primary" value="Ajouter au panier"></button>
									</form>
							</div>
						</div>
					</div>
				</article>
				{%endfor%}
			</div>

			<!-- Nouveautés-->
			<div class="row">
				<div class="col-lg-offset-1">
					<h2>Nouveautés :</h2>
				</div>
			</div>
			<div class="row"> 
				{%for product in listArticle%}
				<article> 
					<div class="col-xs-12 col-md-4 col-lg-4">
						<div class="thumbnail">
							<div class="caption">
									<h3 class="arcticlepop"> {{product.name}} </h3>   <!-- titre article -->
									<center><img src="image/T.jpg" alt="Bureautique" class="images"></center>
									<p>{{product.description}} <br/><br/></p>
							</div>
						</div>
					</div>
				</article>
				{%endfor%}
			</div>
		</div>
		<div id="panier" class="col-lg-3">
			<div class="row">
				<h4>Mon panier</h4>
				<div class="col-lg-8 descriptionArticle">
					{%for product in productsInfo%}
						{{product.name}}<br>
					{%endfor%}
				</div>
				<div class="col-lg-4 prixArticle">
					{%for product in productsInfo%}
						{{product.price}}<br>
					{%endfor%}
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
<script type="text/javascript">
	$(window).scroll(function() {
		var rupture = $("aside").outerHeight();
		if ($(window).scrollTop() > rupture) {
			$("#panier").addClass("fixed");
		} else {
			$("#panier").removeClass("fixed");
		}
	});
</script>
{% endblock %}
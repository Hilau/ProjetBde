{%extends "::base.html.twig"%}

{% block header %}
	<link rel="stylesheet" type="text/css" href="{{ asset('css/styleShopAcceuil.css') }}">
{% endblock %}

{% block body %}
	
	<div class="row" id="boutique">
		<h1>Boutique</h1><br><br>
	</div>
			
	<!-- sous-menu -->
	<nav class="row">
		{% for category in categories %}
        <div class="navbar navbar-inverse">
        	<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar2">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div class="collapse navbar-collapse" id="myNavbar2">
                <ul class="nav navbar-nav">
                	<li><a class="liste" href="{{path('categorieShopShow', {'category_id':category.id} )}}">{{category.name}}</a></li>
                </ul>
            </div>
        </div>
        {% endfor %}
    </nav>
	
	<hr>


	<div class="row">
		<div class="col-lg-9">
			<!-- Articles populaires-->
			<div class="row">
				<div class="col-xs-12 col-md-8 col-lg-offset-1 noMargin">	
					<h2 class="title">Articles populaires :</h2>
				</div>
			</div>

			<div class="row"> 
				{%for product in bestOfProduct%} 
					<div class="col-xs-12 col-md-4 col-lg-4">
						<div class="thumbnail">
							<h3 class="titleProduct"> {{product.name}} </h3>   <!-- titre article -->
							<center><img src="{{asset(product.image)}}" alt="Image du produit" class="imagesProduit"></center>
							<p>{{chaineDescription[product.id]}}...</p>
							<form action="ProductController" method="post" class="titleProduct">
								<input type="hidden" name="product_id" value="{{product.id}}">
								<input type="submit" class="btn btn-primary" value="Ajouter au panier"></button>
							</form>
						</div>
					</div>
				{%endfor%}
			</div>

			<!-- Nouveautés-->
			<div class="row">
				<div class="col-xs-12 col-md-8 col-lg-offset-1 noMargin">	
					<h2 class="title">Nouveautés :</h2>
				</div>
			</div>
			<div class="row"> 
				{%for product in nouveaute%}
					<div class="col-xs-12 col-md-4 col-lg-4">
						<div class="thumbnail">
							<h3 class="titleProduct"> {{product.name}} </h3>   <!-- titre article -->
							<center><img src="{{asset(product.image)}}" alt="Image" class="images"></center>
							<p>{{product.description}} <br/><br/></p>
							<form action="ProductController" method="post" class="titleProduct">
								<input type="hidden" name="product_id" value="{{product.id}}">
								<input type="submit" class="btn btn-primary" value="Ajouter au panier"></button>
							</form>
						</div>
					</div>
				{%endfor%}
			</div>
		</div>
		<div id="panier" class="col-lg-3">
			<div class="row">
				<h4>Mon panier</h4>
				<div class="col-lg-8 descriptionArticle">
					{%for product in productsInfo%}
						{{product.name}}<br>
					{%endfor%}
				</div>
				<div class="col-lg-4 prixArticle">
					{%for product in productsInfo%}
						{{product.price}}<br>
					{%endfor%}
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascripts %}
<script src="C:\wamp64\www\projetWEB-BDE\web\js\stickyKit.js" type="text/javascript"></script>
<script type="text/javascript">
	$("#panier").stick_in_parent();
</script>
{% endblock %}
{%extends "::base.html.twig"%}

{% block header %}
	<link rel="stylesheet" type="text/css" href="{{ asset('css/styleShopAcceuil.css') }}">
{% endblock %}

{% block body %}
	<table class="table">
		<thead>
			<th>Nom</th>
			<th>Description</th>
			<th>Categorie</th>
			<th>Prix</th>
			<th>Update</th>
			<th>Delete</th>
		</thead>
		<tbody>
			{%for product in products%}
				<tr>
					<td>{{product.name}}</td>
					<td>{{product.description}}</td>
					<td>{{categories[product.category.id].name}}</td>
					<td>{{product.price}}</td>
					<td>
						<a href="{{path('updateProduct', {'id':product.id})}}">
							<button class="btn" type="submit"><span class="glyphicon glyphicon-edit"></span></button>
						</a>
					</td>
					<td>
						<a href="{{path('deleteProduct', {'id':product.id})}}">
							<button class="btn" type="submit"><span class="glyphicon glyphicon-remove"></span></button>
						</a>
					</td>
				</tr>
			{%endfor%}
		</tbody>
	</table>

	<a href="{{path('addProduct')}}">
		<button class="btn" type="submit"><span class="glyphicon glyphicon-plus"></span> Nouveau produit</button>
	</a>
	
{% endblock %}
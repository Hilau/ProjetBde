{%extends "::base.html.twig"%}

{% block header %}
	<link rel="stylesheet" type="text/css" href="{{ asset('css/styleListActivity.css') }}">
	<meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, user-scalable=no">
{% endblock %}

{% block body %}

	<div class="row">
		<h3>Nos activités</h3>
		<hr>
	</div>

	{% for activity in listActivities%}
	<div class="row">
		<div class="col-xs-12 col-lg-offset-1 col-lg-10 activity">
			<div class="row">
				<h4 class="title">{{activity.name}}</h4>
				<h4 class="date">13/04/2017</h4><br><br>
			</div>
			<div class="row activityInfo">
				<div class="col-xs-3 col-lg-3 ctnBtn">
					<img class="img-responsive" src="{{ asset('img/bataille.jpg') }}">
				</div>
				<div class="col-xs-9 col-lg-9">
					<p class="description">
					{{activity.description}}
					</p>
					<form name="FormInscription" method="post" action="activity">
						<input type="hidden" name="id" value="{{activity.id}}">
						<button type="submit" class="btn btn-primary subscribe">S'inscrire</button>
					</form>
					
					<a class="details" href="#">Plus de détails</a>
				</div>
			</div>
		</div>	
	</div> <br><br>
	{% endfor %}


{% endblock %}
{%extends "::base.html.twig"%}

{% block header %}
	<link rel="stylesheet" type="text/css" href="{{ asset('css/styleListActivity.css') }}">
	<meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, user-scalable=no">
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-xs-12 col-lg-12">
			<h3>Nos activités</h3>
			<hr>
		</div>
	</div>

	{% for activity in listActivities%}
	<div class="row">
		<div class="col-xs-offset-1 col-xs-10 col-lg-offset-1 col-lg-10 activity">
			<div class="row">
				<div class="col-xs-12 col-lg-9">
					<a class="noStyle" href="{{ path('signInActivity', {'activity_id': activity.id}) }}">
						<h4 class="title">{{ activity.name }}</h4>
					</a>
				</div>
				<div class="col-xs-12 col-lg-3">
					<h4 class="date">{{ activity.date|date('d/m/Y H:i:s') }}</h4><br>
				</div>
			</div>
			<div class="row activityInfo">
				<div class="col-xs-12 col-lg-3 ctnBtn">
					<img class="img-responsive" src="{{ asset('imgActivities/') }}{{ activitiesPhoto[activity.id] }}">
				</div>
				<div class="col-xs-12 col-lg-9">
					<p class="description">{{activity.description}}</p>
					<a href="{{ path('signInActivity', {'activity_id': activity.id}) }}"><button type="submit" class="btn btn-primary subscribe">S'inscrire</button></a>
					<a href="{{ path('signInActivity', {'activity_id': activity.id}) }}"><button class="btn btn-default details">Détails</button></a>
				</div>
			</div>
		</div>	
	</div> <br><br>
	{% endfor %}


{% endblock %}
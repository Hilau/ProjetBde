{%extends "::base.html.twig"%}

{% block header %}
	<link rel="stylesheet" type="text/css" href="{{ asset('css/styleModerationPhoto.css') }}">
{% endblock %}

{% block body %}
	<div class="row">
		<div class="row ti">
			<h3>Choisissez les photos Ã  supprimer</h3><br>
		</div>
		<hr>
		<div class="col-lg-offset-2 col-lg-10 col-xs-offset-1 col-xs-10">
			<form class="form-group" method="POST" action="{{ path('deletePhoto') }}">
				<div class="row">
					{% for photo in photos%}
						<div class="col-lg-3 col-xs-4">
							<label class="btn btn-primary">
							<a href="" data-toggle="modal" id="imgToReplace" data-target="#modalCommentaireimg{{ photo.id }}">
								<img class="img-responsive img-thumbnail" id="img{{ photo.id }}" src="{{ asset(photo.photo) }}">
							</a>			
							</label>
							<input type="checkbox" name="photo[]" value="{{ photo.id }}" class="checkbox">
						</div>
					{% endfor %}
				</div>
			
				<div class="row">
					<div class="col-lg-offset-2 col-lg-2 col-xs-offset--1 col-xs-3">
						<br><br><input type="submit" name="supprimer" class="btn btn-danger" value="Supprimer">
					</div>
				</div>
			</form>
		</div>	

		<div id="modalCommentaireimg{{ photos.id }}" class="modal fade" role="dialog">
				<div class="modal-dialog modal-lg">
					<div class="modal-content">
						<div class="modal-footer">
							<button type="button" class="close" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span></button>
						</div>
						<div class="modal-body">
							<div class="row">
								<div class="col-lg-offset-1 col-lg-10">
									<div class="row">
										<img class="image" src="{{ asset(photo.photo) }}">
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		
	</div>
{% endblock %}

{% block javascripts %}
<script type="text/javascript">
	$(function()
	{
    	$(".checkbox").on('click', function(){

    		var id = $(this).val();

    		if($('#img'+id).hasClass("checked"))
    		{
    			$('#img'+id).removeClass("checked");
    		}

    		else
    		{
    			$('#img'+id).addClass("checked");
    		}
		});
	});
</script>
{% endblock%}

